<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Site Styles -->
    <link href="../css/student/styleTestIt.css" rel="stylesheet">

    <title>Quiz Kids</title>

    <!-- Fonts, Kits and Bootstrap -->
    <%- include("../partials/headers.ejs") %>

    <style>
        input.btn {
            color: var(--black);
            background-color: var(--white);
            transition: all 0.5s ease-in-out;
            border: none;
        }

        input.btn:hover {
            transform: scale(1.05);
            color: var(--black);
            background-color: var(--white);
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="quiz-container">
            <div class="text-center">
                <h1 class="mb-4">Welcome to the Quiz!</h1>
            </div>
            <form action="/submit-quiz" method="POST">
                <% for (var i = 0; i < questions.length; i++) { %>
                    <div class="mb-4">
                        <h3><%= questions[i][0] %></h3>
                        <% for (var j = 0; j < respuestas.length; j++) { %>
                            <% if (questions[i][1] == respuestas[j][0]) { %>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="<%= i %>" id="question-<%= i %>-option-<%= j %>" value="<%= respuestas[j][2] %>">
                                    <label class="form-check-label" for="question-<%= i %>-option-<%= j %>">
                                        <%= respuestas[j][1] %>
                                    </label>
                                </div>
                            <% } %>
                        <% } %>
                        <label for="confidence-level-<%= i %>" class="form-label mt-2">Confidence Level:</label>
                        <select id="confidence-level-<%= i %>" name="confidence_level" class="form-select">
                            <option value="High">High</option>
                            <option value="Medium">Medium</option>
                            <option value="Low">Low</option>
                        </select>
                    </div>
                <% } %>
                <div class="text-center">
                    <input type="submit" value="Submit" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</body>
</html>
