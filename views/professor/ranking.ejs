  <!doctype html>
  <html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- Site Styles -->
    <link href="/css/teacher/styleRanking.css" rel="stylesheet">

    <title>Quiz Kids - Teacher Ranking</title>

    <!-- Fonts, Kits and Bootstrap -->
    <%- include("../partials/headers.ejs") %>
  </head>

  <!-- html body -->
  <body>
    <!-- navbar -->
    <%- include("../partials/professor/navbar.ejs") %>

    <!-- ranking -->
    <div class="container-fluid">
      <div class="row d-flex flex-wrap align-items-center">
        <div class="col-12 text-center">
          <h2>Ranking de Alumnos</h2>
        </div>
      </div>
      <div class="row d-flex flex-wrap align-items-center">
        <div class="col-12">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">Ranking</th>
                <th scope="col">Nombre</th>
                <th scope="col">Puntos</th>
              </tr>
            </thead>
            <tbody>
              <% ranking.forEach((alumno, index) => { %>
                <tr>
                  <th scope="row"><%= index + 1 %></th>
                  <td><%= alumno.nombre %></td>
                  <td><%= alumno.total_puntaje %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- bootstrap js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
  </html>
